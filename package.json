{
	"name": "vscode-workspace-manager",
	"displayName": "vscode-workspace-manager",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:WorkspaceList"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "WorkspaceManager.addWorkspace",
				"title": "添加工作区",
				"icon": {
					"light": "assets/add_light.svg",
					"dark": "assets/add_dark.svg"
				}
			},{
				"command": "WorkspaceManager.refreshWorkspace",
				"title": "刷新目录",
				"icon": {
					"light": "assets/refresh_light.svg",
					"dark": "assets/refresh_dark.svg"
				}
			},{
				"command": "WorkspaceManager.activateWorkspace",
				"title": "激活工作区",
				"icon": {
					"light": "assets/activate_light.svg",
					"dark": "assets/activate_dark.svg"
				}
			},{
				"command": "WorkspaceManager.deleteWorkspace",
				"title": "删除工作区",
				"icon": {
					"light": "assets/delete_light.svg",
					"dark": "assets/delete_dark.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "WorkspaceManager.addWorkspace",
					"when": "view == WorkspaceList",
					"group": "navigation"
				},{
					"command": "WorkspaceManager.refreshWorkspace",
					"when": "view == WorkspaceList",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
				  "command": "WorkspaceManager.activateWorkspace",
				  "when": "view == WorkspaceList && viewItem == workspace",
				  "group": "inline"
				},
				{
				  "command": "WorkspaceManager.deleteWorkspace",
				  "when": "view == WorkspaceList && viewItem == workspace",
				  "group": "inline"
				}
			  ]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "WorkspaceManagerTab",
					"title": "工作区管理",
					"icon": "assets/icon.svg"
				}
			]
		},
		"views": {
			"WorkspaceManagerTab": [
				{
					"id": "WorkspaceList",
					"name": "工作区目录"
				},
				{
					"id": "ProjectList",
					"name": "项目切换"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}